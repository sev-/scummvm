<layout_info resolution = 'y>399'>
	<globals>
		<def var = 'Line.Height' value = '32' />
		<def var = 'Font.Height' value = '32' />

		<def var = 'Padding.Bottom' value = '16' />
		<def var = 'Padding.Left' value = '16' />
		<def var = 'Padding.Right' value = '16' />
		<def var = 'Padding.Top' value = '16' />

		<def var = 'About.OuterBorder' value = '80'/>

		<def var = 'ListWidget.hlLeftPadding' value = '0'/>
		<def var = 'ListWidget.hlRightPadding' value = '0'/>

		<def var = 'ShowLauncherLogo' value = '1'/>
		<def var = 'ShowGlobalMenuLogo' value = '1'/>
		<def var = 'ShowSearchPic' value = '1'/>

		<def var = 'ShowChooserPics' value = '1'/>
		<def var = 'ShowChooserPageDisplay' value = '1'/>

		<def var = 'SaveLoadChooser.ExtInfo.Visible' value = '1'/>
		<def var = 'RecorderDialog.ExtInfo.Visible' value = '1'/>

		<widget name = 'Button'
				size = '200,50'
		/>		

		<widget name = 'Radiobutton'
				size = '300, Globals.Line.Height'
		/>
	</globals>

	<dialog name = 'MainMenu' overlays = 'screen'>
		<layout type = 'vertical' padding = '16, 2, 16, 2' center = 'true'>
			<widget name = 'padding'
					width = '250'
					height = '180'
			/>
			<widget name = 'sep1'
					width = '250'
					height = '3'
			/>
			<widget name = 'Title'
					width = '210'
					height = '30'
			/>
			<widget name = 'sep2'
					width = '250'
					height = '3'
			/>
			<layout type = 'horizontal' padding = '16, 16, 16, 16' center = 'true'>
			      <widget name = 'NewGameButton'
					width = 'Globals.Button.Width'
					height = 'Globals.Button.Height'
				  />
			      <widget name = 'ContinueButton'
					width = 'Globals.Button.Width'
					height = 'Globals.Button.Height'
				  />
			</layout>
			<layout type = 'horizontal' padding = '16, 16, 16, 16' center = 'true'>
			      <widget name = 'SaveGameButton'
					width = 'Globals.Button.Width'
					height = 'Globals.Button.Height'
				  />
			      <widget name = 'SettingsButton'
					width = 'Globals.Button.Width'
					height = 'Globals.Button.Height'
				  />
			</layout>
			<layout type = 'horizontal' padding = '16, 16, 16, 16' center = 'true'>
			      <widget name = 'LoadGameButton'
					width = 'Globals.Button.Width'
					height = 'Globals.Button.Height'
				  />
			      <widget name = 'TutorialButton'
					width = 'Globals.Button.Width'
					height = 'Globals.Button.Height'
				  />
			</layout>
			<widget name = 'QuitButton'
				width = 'Globals.Button.Width'
				height = 'Globals.Button.Height'
			/>
		</layout>
	</dialog>

	<dialog name = 'Settings' overlays = 'screen'>
		<layout type = 'vertical' padding = '16, 2, 16, 2' center = 'true'>
			<widget name = 'padding'
					width = '250'
					height = '180'
			/>
			<widget name = 'sep1'
					width = '250'
					height = '3'
			/>
			<widget name = 'Title'
					width = '210'
					height = '30'
			/>
			<widget name = 'sep2'
					width = '250'
					height = '3'
			/>
			<layout type = 'horizontal' padding = '16, 16, 16, 16' center = 'true'>
			      <widget name = 'VoiceButton'
					width = 'Globals.Button.Width'
					height = 'Globals.Button.Height'
				  />
			      <widget name = 'MusicButton'
					width = 'Globals.Button.Width'
					height = 'Globals.Button.Height'
				  />
			</layout>
			<layout type = 'horizontal' padding = '16, 16, 16, 16' center = 'true'>
			      <widget name = 'LanguageButton'
					width = 'Globals.Button.Width'
					height = 'Globals.Button.Height'
				  />
			      <widget name = 'GraphicsButton'
					width = 'Globals.Button.Width'
					height = 'Globals.Button.Height'
				  />
			</layout>
			<layout type = 'horizontal' padding = '16, 16, 16, 16' center = 'true'>
			      <widget name = 'ControlsButton'
					width = 'Globals.Button.Width'
					height = 'Globals.Button.Height'
				  />
			      <widget name = 'AboutButton'
					width = 'Globals.Button.Width'
					height = 'Globals.Button.Height'
				  />
			</layout>
			<widget name = 'BackButton'
				width = 'Globals.Button.Width'
				height = 'Globals.Button.Height'
			/>
		</layout>
	</dialog>

	<dialog name = 'VoiceDialog' overlays = 'screen'>
		<layout type = 'vertical' padding = '16, 2, 16, 2' center = 'true'>
			<widget name = 'padding'
					width = '250'
					height = '200'
			/>
			<widget name = 'subToggleSubBoth'
					type = 'Radiobutton'
			/>
			<widget name = 'subToggleSpeechOnly'
					type = 'Radiobutton'
			/>
			<widget name = 'subToggleSubOnly'
					type = 'Radiobutton'
			/>
			<widget name = 'padding2'
					width = '250'
					height = '40'
			/>
			<widget name = 'BackButton'
				width = 'Globals.Button.Width'
				height = 'Globals.Button.Height'
			/>
		</layout>
	</dialog>

	<dialog name = 'MusicDialog' overlays = 'screen'>
		<layout type = 'vertical' padding = '16, 2, 16, 2' center = 'true'>
			<widget name = 'padding'
					width = '250'
					height = '200'
			/>
			<widget name = 'musicToggleEnhanced'
					type = 'Radiobutton'
			/>
			<widget name = 'musicToggleOriginal'
					type = 'Radiobutton'
			/>
			<widget name = 'musicToggleNone'
					type = 'Radiobutton'
			/>
			<widget name = 'padding2'
					width = '250'
					height = '40'
			/>
			<widget name = 'BackButton'
				width = 'Globals.Button.Width'
				height = 'Globals.Button.Height'
			/>
		</layout>
	</dialog>

	<dialog name = 'GraphicsDialog' overlays = 'screen'>
		<layout type = 'vertical' padding = '16, 2, 16, 2' center = 'true'>
			<widget name = 'padding'
					width = '250'
					height = '200'
			/>
			<widget name = 'gfxToggleHigh'
					type = 'Radiobutton'
			/>
			<widget name = 'gfxToggleMedium'
					type = 'Radiobutton'
			/>
			<widget name = 'gfxToggleLow'
					type = 'Radiobutton'
			/>
			<widget name = 'gfxToggleOriginal'
					type = 'Radiobutton'
			/>
			<widget name = 'padding2'
					width = '250'
					height = '40'
			/>
			<widget name = 'BackButton'
				width = 'Globals.Button.Width'
				height = 'Globals.Button.Height'
			/>
		</layout>
	</dialog>

	<dialog name = 'ControlsDialog' overlays = 'screen'>
		<layout type = 'vertical' padding = '16, 2, 16, 2' center = 'true'>
			<widget name = 'padding'
					width = '250'
					height = '200'
			/>
			<widget name = 'ctrlToggleTouch'
					type = 'Radiobutton'
			/>
			<widget name = 'ctrlToggleClassic'
					type = 'Radiobutton'
			/>
			<widget name = 'padding2'
					width = '250'
					height = '40'
			/>
			<widget name = 'BackButton'
				width = 'Globals.Button.Width'
				height = 'Globals.Button.Height'
			/>
		</layout>
	</dialog>

	<dialog name = 'LanguageDialog' overlays = 'screen'>
		<layout type = 'vertical' padding = '16, 2, 16, 2' center = 'true'>
			<widget name = 'padding'
					width = '250'
					height = '200'
			/>
			<widget name = 'english'
					type = 'Radiobutton'
			/>
			<widget name = 'german'
					type = 'Radiobutton'
			/>
			<widget name = 'spanish'
					type = 'Radiobutton'
			/>
			<widget name = 'french'
					type = 'Radiobutton'
			/>
			<widget name = 'italian'
					type = 'Radiobutton'
			/>
			<widget name = 'hebrew'
					type = 'Radiobutton'
			/>
			<widget name = 'padding2'
					width = '250'
					height = '40'
			/>
			<widget name = 'BackButton'
				width = 'Globals.Button.Width'
				height = 'Globals.Button.Height'
			/>
		</layout>
	</dialog>
</layout_info>
